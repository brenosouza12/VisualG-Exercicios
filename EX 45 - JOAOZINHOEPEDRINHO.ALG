Algoritmo "EX 10B - JOAOZINHOEPEDRINHO"
Var
   alturaJ:inteiro
   alturaP:inteiro
   ano:inteiro


Inicio
   alturaJ <- 175
   alturaP <- 160
   ano <- 0
    enquanto (alturaJ>alturaP) faca
    ano <- ano + 1
    alturaP <- alturaP + 3
    alturaJ <- alturaJ + 1
    fimenquanto
    
    escreva("Pedrinho será mais alto que joãozinho em", ano, " anos")

Fimalgoritmo